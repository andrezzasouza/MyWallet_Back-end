{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": [
      "error",
      "never"
    ],
    "import/extensions": [
      "error",
      {
        "js": "ignorePackages"
      }
    ],
    "no-console": [
      "off"
    ],
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": "off",
    "import/prefer-default-export": "off",
    "consistent-return": "off",
    "no-unused-vars": "off",
    "no-undef": "off"
  },
  "plugins": [
    "prettier",
    "jest"
  ]
}
